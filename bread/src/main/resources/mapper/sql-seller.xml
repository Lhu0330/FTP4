			INSERT INTO product_file
				( board_idx, original_file_name, stored_file_path, file_size, store_id, file_type, product_id)
			VALUES
		]]>
		<foreach collection="list" item="item" separator=",">
		(	#{item.boardIdx}, 
			#{item.originalFileName},
			#{item.storedFilePath},
			#{item.fileSize},
			#{item.storeId},
