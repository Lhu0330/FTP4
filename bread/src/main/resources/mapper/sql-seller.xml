			#{item.productId}
			)
			
		</foreach>
	</insert>
	
	
	<!-- tkdvnadlfma -->
	<update id="insertshop" parameterType="long">
	
	<![CDATA[
	
		UPDATE admin_product

            INNER JOIN b_member ON admin_product.store_id = b_member.user_id
			SET  admin_product.store_id = b_member.store_name

			]]>

	
	</update>
	
	
	
