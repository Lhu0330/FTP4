<mapper namespace="com.bitc.team5.mapper.review.ReviewMapper">


		<insert id="storeinsert" parameterType="com.bitc.team5.dto.ReviewDto">
				<![CDATA[
				
					INSERT INTO
						review	( place_name , address_name , road_address_name , x , y , user_id, review_code )
					VALUES
						(	#{placeName}, #{addressName}, #{roadAddressName}, #{x}, #{y} , #{userId} , #{reviewCode} )
				]]>
				
	
	   </insert>
	   
	   	<!-- 리뷰 등록-->
	<insert id="writeReview" parameterType="com.bitc.team5.dto.ReviewDto" useGeneratedKeys="true" keyProperty="idx">
		<![CDATA[
			INSERT INTO b_review
				(title, user_id, contents , review_code)
			VALUES
				(#{title}, #{userId}, #{contents}, #{reviewCode} )
		]]>
	</insert>
	
		<insert id="insertReviewFileList" parameterType="com.bitc.team5.dto.AdminProductFileDto">
		<![CDATA[
			INSERT INTO review_file
				( board_idx, original_file_name, stored_file_path, file_size, user_id, file_type, review_code )
			VALUES
		]]>
		<foreach collection="list" item="item" separator=",">
		(	#{item.boardIdx}, 
			#{item.originalFileName},
			#{item.storedFilePath},
			#{item.fileSize},
			#{item.userId},
			#{item.fileType},
			#{item.reviewCode} )
			
		</foreach>
	</insert>
	
	
	
	<!-- 리뷰 리스트-->
	<select id="selectReviewList" resultType="com.bitc.team5.dto.ReviewDto">
		<![CDATA[ 
		SELECT
           a.idx, a.user_id, a.title, a.contents, a.review_code, b.place_name
           
         FROM
            b_review as a
            
         join
         	
         	review as b
         
         ON
            b.idx= a.idx
    	
    		
     
		]]>
	</select>
	
	<!-- 내 리뷰 리스트-->
	<select id="selectMyReview" resultType="com.bitc.team5.dto.ReviewDto">
		<![CDATA[ 
			SELECT
           a.idx, a.user_id, a.title, a.contents, a.review_code, b.place_name, b.road_address_name , b.y , b.x
           
         FROM
            b_review as a
            
         join
         	
         	review as b
         
         ON
            b.idx= a.idx
            
		and	
			a.user_id = #{userId}
	
		]]>
	</select>
	
	<!-- 상세 리뷰글 -->
	<select id="selectReview"  parameterType="int" resultType="com.bitc.team5.dto.ReviewDto">
		
		<![CDATA[ 
		
		 SELECT
           a.idx, a.user_id, a.title, a.contents, a.review_code, b.place_name, b.address_name, b.x , b.y , b.road_address_name
         FROM
            b_review as a
         JOIN
         	 review as b
         ON
             b.idx= a.idx
         and 
         	a.idx = #{idx}
         	
    
      
		]]>
		
	</select>
	
