				-->
				
	
	
		<!-- (file_size / 1024) -> kb로 표현할라고  -->
	<select id="showReviewList"  resultType="com.bitc.team5.dto.AdminProductFileDto">
		<![CDATA[
			SELECT
				file_idx, board_idx, original_file_name, stored_file_path,
				FORMAT(ROUND(file_size / 1024), 0) AS file_size
			FROM
				review_file as a
				
			JOIN
         	 review	as b
			
			on
				a. review_code = b.review_code 
			and
			 a.user_id = b.user_id
			and
				 b.idx = #{idx}
			
			
		]]>
	</select>

	<!--리뷰 수정-->
	<update id="updateReview" parameterType="com.bitc.team5.dto.ReviewDto">
		<![CDATA[ 
			UPDATE
				b_review
			SET
				title = #{title},
				contents = #{contents}
			WHERE
				idx = #{idx}
		]]>
	</update>
	
	<!--리뷰 삭제-->
	<delete id="deleteReview" parameterType="com.bitc.team5.dto.ReviewDto">
		<![CDATA[ 
			DELETE FROM
				b_review
			WHERE
				idx = #{idx}
		]]>
	</delete>

